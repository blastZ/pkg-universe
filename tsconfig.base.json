{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/pkgx/*": [
        "packages/pkgx/src/*/index.js"
      ]
    }
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/output/**"
  ]
}